@model IEnumerable<Sports_Analysis.Models.FootballMatch>

@{
    ViewData["Title"] = "Football Data";
}

<div class="container mt-4">
    <h2>Football Matches</h2>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Home Team</th>
                    <th>Away Team</th>
                    <th>Score</th>
                    <th>Possession</th>
                    <th>Shots</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var match in Model)
                {
                    <tr>
                        <td>@match.Date.ToString("dd/MM/yyyy")</td>
                        <td>@match.HomeTeam</td>
                        <td>@match.AwayTeam</td>
                        <td>@match.HomeGoals - @match.AwayGoals</td>
                        <td>@match.HomePossession% - @match.AwayPossession%</td>
                        <td>@match.HomeShots (@match.HomeShotsOnTarget) - @match.AwayShots (@match.AwayShotsOnTarget)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 